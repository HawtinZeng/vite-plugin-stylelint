{
  "name": "vite-plugin-stylelint",
  "version": "5.1.1",
  "description": "Stylelint plugin for Vite.",
  "keywords": [
    "stylelint",
    "vite-plugin"
  ],
  "homepage": "https://github.com/ModyQyW/vite-plugin-stylelint",
  "repository": "git+https://github.com:ModyQyW/vite-plugin-stylelint.git",
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui-dev@foxmail.com",
    "url": "https://modyqyw.github.io"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "check:deps": "taze -f",
    "check:types": "tsc --noEmit",
    "commit": "git-cz",
    "dev": "unbuild --stub",
    "examples:react:build": "pnpm --filter react run build",
    "examples:react:dev": "pnpm --filter react run dev",
    "examples:vue:build": "pnpm --filter vue run build",
    "examples:vue:dev": "pnpm --filter vue run dev",
    "lint": "conc \"pnpm:lint:eslint\" \"pnpm:lint:markdownlint\" \"pnpm:lint:publint\"",
    "lint:eslint": "eslint ./src --fix --cache --ignore-path=.gitignore",
    "lint:markdownlint": "markdownlint . --fix --ignore=CHANGELOG.md --ignore-path=.gitignore",
    "lint:publint": "publint",
    "prepare": "is-ci || simple-git-hooks",
    "prepublishOnly": "pnpm run build",
    "release": "pnpm install && pnpm run build && pnpm run lint && bumpp"
  },
  "dependencies": {
    "@rollup/pluginutils": "^5.0.5",
    "chokidar": "^3.5.3",
    "debug": "^4.3.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@commitlint/prompt": "^18.0.0",
    "@modyqyw/fabric": "^9.0.6",
    "@tsconfig/node18": "^18.2.2",
    "@types/debug": "^4.1.10",
    "@types/eslint": "^8.44.6",
    "@types/node": "^18.18.6",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "bumpp": "^9.2.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.0.2",
    "markdownlint-cli": "^0.37.0",
    "picocolors": "^1.0.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "publint": "^0.2.5",
    "rollup": "^3.29.4",
    "simple-git-hooks": "^2.9.0",
    "sort-package-json": "^2.6.0",
    "stylelint": "^15.11.0",
    "taze": "^0.11.4",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0",
    "vite": "^4.5.0"
  },
  "peerDependencies": {
    "@types/stylelint": "^13.0.0",
    "postcss": "^7.0.0 || ^8.0.0",
    "rollup": "^2.0.0 || ^3.0.0 || ^4.0.0",
    "stylelint": "^13.0.0 || ^14.0.0 || ^15.0.0",
    "vite": "^2.0.0 || ^3.0.0 || ^4.0.0 || 5.0.0-0"
  },
  "peerDependenciesMeta": {
    "@types/stylelint": {
      "optional": true
    },
    "postcss": {
      "optional": true
    },
    "rollup": {
      "optional": true
    }
  },
  "packageManager": "pnpm@8.9.2",
  "engines": {
    "node": ">=14.18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
